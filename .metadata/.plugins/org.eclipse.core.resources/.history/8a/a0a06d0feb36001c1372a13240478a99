<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">

	<insert id="insert" parameterType="HashMap">
		INSERT INTO book (
			book_id,
			title,
			category,
			price,
			insert_date
		) VALUES (
			(SELECT NVL(MAX(book_id), 0) + 1 
			   FROM book),
			#{title},
			#{category},
			#{price},
			sysdate
		)
	</insert>

</mapper>